# Variables de entorno para Docker Compose
# Copia este archivo a .env y completa con tus valores reales

# Credenciales de Dropbox (REQUERIDAS)
DROPBOX_APP_KEY=tu_app_key_aqui
DROPBOX_APP_SECRET=tu_app_secret_aqui
DROPBOX_ACCESS_TOKEN=tu_access_token_aqui

# Clave secreta para Flask (REQUERIDA)
SECRET_KEY=tu_clave_secreta_super_segura_aqui

# URL de redirección de Dropbox (opcional, se usa valor por defecto)
# DROPBOX_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Configuración adicional (opcional)
# FLASK_ENV=production